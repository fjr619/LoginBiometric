<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".example2.MainActivity2"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login dengan username aa dan password bb"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="username"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLogin"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:onClick="onClickLogin"
        android:text="Normal Login"
        android:layout_gravity="center"
        android:visibility="visible"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBiometricsLogin"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:onClick="onClickBiometrics"
        android:text="use Biometric"
        android:layout_gravity="center"
        android:visibility="visible"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLogout"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:onClick="onClickLogout"
        android:text="Logout"
        android:layout_gravity="center"
        android:visibility="visible"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonReset"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:onClick="onClickReset"
        android:text="Reset data login fingerprint"
        android:layout_gravity="center"
        android:visibility="visible"/>
</LinearLayout>